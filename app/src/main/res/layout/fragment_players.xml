<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPlayers">

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fabNext"
        android:layout_width="84dp"
        android:layout_height="76dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="34dp"
        android:layout_marginBottom="38dp"
        android:background="@color/colorAccent"
        android:clickable="true"
        android:onClick="nextStage"
        app:srcCompat="@drawable/ic_next" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_centerHorizontal="true"
        android:layout_width="133dp"
        android:layout_height="151dp"
        android:layout_marginEnd="118dp"
        android:layout_marginBottom="402dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        app:srcCompat="@drawable/ic_players" />

    <RadioGroup
        android:id="@+id/rGroupPlayers"
        android:layout_width="188dp"
        android:layout_height="195dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginEnd="54dp"
        android:layout_marginBottom="186dp">

        <RadioButton
            android:id="@+id/rBtnOne"
            android:layout_width="match_parent"
            android:layout_height="21dp"
            android:layout_alignStart="@+id/rGroupPlayers"
            android:layout_alignTop="@+id/rGroupPlayers"
            android:layout_weight="1"
            android:text="@string/playerChoiceOne" />

        <RadioButton
            android:id="@+id/rBtnTwo"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_alignStart="@id/rBtnOne"
            android:layout_weight="1"
            android:text="@string/playerChoiceTwo" />
    </RadioGroup>


</RelativeLayout>